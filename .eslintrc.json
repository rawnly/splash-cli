{
	"env": {
		"es6": true,
		"node": true
	},
	"parser": "babel-eslint",
	"parserOptions": {
		"ecmaVersion": 2018,
		"sourceType": "module",
		"codeFrame": true,
		"allowImportExportEverywhere": false
	},
	"rules": {
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-undef": "error",
		"no-duplicate-imports": "error",
		"no-else-return": "error",
		"no-multi-spaces": "error"
	}
}
